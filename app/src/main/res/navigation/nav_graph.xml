<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.noteapp.ui.Fragment.HomeFragment"
        android:label="Notes App"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <action
            android:id="@+id/action_homeFragment_to_createFragment"
            app:destination="@id/createFragment" >

        </action>
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.example.noteapp.ui.Fragment.EditFragment"
        android:label="Update Notes"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="data"
            app:argType="com.example.noteapp.model.Notes" />

    </fragment>
    <fragment
        android:id="@+id/createFragment"
        android:name="com.example.noteapp.ui.Fragment.CreateFragment"
        android:label="Create Notes"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_createFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>